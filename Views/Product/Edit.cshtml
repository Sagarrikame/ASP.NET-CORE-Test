@{
    ViewBag.Title = "Edit";
}

<h1>Edit Product</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" name="SN" value="@Model.SN" />
    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" name="ProductName" class="form-control" value="@Model.ProductName" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea name="Description" class="form-control" required>@Model.Description </textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" name="Price" step="0.01" class="form-control" value="@Model.Price" required />
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
    
</form>

